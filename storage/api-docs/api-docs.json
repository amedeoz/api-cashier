{
    "swagger": "2.0",
    "info": {
        "title": "Paintball API",
        "version": "0.1"
    },
    "paths": {
        "/clients": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "responses": {
                    "200": {
                        "description": "Should return all clients for today",
                        "schema": {
                            "$ref": "#/definitions/ClientsPerDay"
                        }
                    }
                }
            }
        },
        "/clients/{date}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "parameters": [
                    {
                        "name": "date",
                        "in": "path",
                        "description": "date format like this YYYY-MM-DD (2017-10-21)",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Should return all clients for that day",
                        "schema": {
                            "$ref": "#/definitions/ClientsPerDay"
                        }
                    }
                }
            }
        },
        "/locations/{location_code}": {
            "get": {
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "name": "location_code",
                        "in": "path",
                        "description": "location code. Example: DUF3D92P",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Should return all info by a location",
                        "schema": {
                            "$ref": "#/definitions/LocationByCode"
                        }
                    }
                }
            }
        },
        "/locations/products/{location_code}/{product_id}": {
            "put": {
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "name": "location_code",
                        "in": "path",
                        "description": "location code. Example: DUF3D92P",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "product_id",
                        "in": "path",
                        "description": "product ID",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "List of ids",
                        "required": false,
                        "schema": {
                            "properties": {
                                "add": {
                                    "properties": {
                                        "products_in_list": {
                                            "type": "integer"
                                        },
                                        "products_in_payment": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                },
                                "remove": {
                                    "properties": {
                                        "products_in_list": {
                                            "type": "integer"
                                        },
                                        "products_in_payment": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Should save items in the location",
                        "schema": {
                            "$ref": "#/definitions/setItemsPerLocationCode"
                        }
                    }
                }
            }
        }
    },
